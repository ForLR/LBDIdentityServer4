@model LBDIdentityServer4.Quickstart.Role.AddRole
@{
    ViewBag.Title = "添加角色";
}
<h2>@ViewBag.Title</h2>
<form method="post">
    <div class="form-group row">
        <label asp-for="role_name" class="col-sm-2"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="role_name">
            <span class="invalid" asp-validation-for="role_name"></span>
        </div>
    </div>
    <div class="invalid" asp-validation-summary="ModelOnly">
    </div>
    <button type="submit" class="btn btn-primary">提交</button>
    <a asp-action="Index" class="btn btn-secondary">返回列表</a>
</form>